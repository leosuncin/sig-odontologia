                    <a href="{{ path('usuario_edit', { 'id': entity.idusuario }) }}" class="btn btn-info btn-xs"><i class="glyphicon glyphicon-pencil"></i> Modificar</a>
                </div>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<a class="btn btn-primary" href="{{ path('usuario_new') }}"><i class="glyphicon glyphicon-plus"></i> Ingresar nuevo usuario</a>
{% endblock %}


