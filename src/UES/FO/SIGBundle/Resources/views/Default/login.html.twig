{% extends 'SIGBundle:Default:index.html.twig' %}

{% block layout %}
<div id="login-page" class="container">
	<form action="{{ path('login_check') }}" method="post" class="form-signin">
		<h2 class="form-signin-heading text-center">{{ title }}</h2>
		<div class="form-group">
            <label class="control-label col-xs-12 text-center required" for="username">Nombre de usuario</label>
            <input id="username" class="form-control col-xs-12" type="text" name="_username" value="{{ last_username }}" placeholder="Ingrese su nombre de usuario" required autofocus />
		</div>
        <div class="form-group">
            <label class="control-label col-xs-12 text-center required" for="password">Contraseña</label>
            <input id="password" class="form-control col-xs-12" type="password" name="_password" placeholder="Ingrese su contraseña" required />
        </div>
		<div class="form-group">
            <div class="controls"
                <label class="checkbox"><input type="checkbox" id="remember_me" name="_remember_me" /> Mantener conectado</label>
            </div>
            <input type="submit" value="Acceder" class="btn btn-primary btn-lg btn-block" />
		</div>
		{% if error %}
            <a href="{{ path('usuario_recover') }}">Recuperar contraseña</a>
            <div class="alert alert-warning alert-dismissable fade in">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                {{ error.message|trans }}
            </div>
		{% endif %}
	</form>
</div>
{% endblock %}
